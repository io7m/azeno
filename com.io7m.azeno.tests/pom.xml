  <build>
    <plugins>
      <!-- Generate version strings used in tests. -->
      <plugin>
        <groupId>com.io7m.stmp</groupId>
        <artifactId>string-template-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-version</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>render</goal>
            </goals>
            <configuration>
              <templates>
                <template>
                  <directory>src/main/string-template</directory>
                  <name>AzTestProperties</name>
                  <target>
                    ${project.build.directory}/generated-sources/string-template/com/io7m/azeno/tests/AzTestProperties.java
                  </target>
                  <properties>
                    <IDSTORE_VERSION>${containers.idstore.version}</IDSTORE_VERSION>
                    <POSTGRESQL_VERSION>${containers.postgresql.version}</POSTGRESQL_VERSION>
                    <SOLR_VERSION>${org.apache.solr.version}</SOLR_VERSION>
                  </properties>
                </template>
              </templates>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- Determine test coverage -->
      <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

</project>
